<p id="notice"><%= notice %></p>

<h2>Drover Reviews</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Review</th>
      <th>Rating</th>
      <th>View</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.created_at.strftime("%d %B %Y") %></td>
        <td><%= review.name %></td>
        <td><%= review.review %></td>
        <td><%= review.rating %></td>
        <td><%= link_to 'View', review %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Post a new Review', new_review_path %>
