<p id="notice"><%= notice %></p>

<h2>Drover Review</h2>

<p>
  <strong>Date:</strong>
  <%= @review.created_at.strftime("%d %B %Y") %>
</p>

<p>
  <strong>Name:</strong>
  <%= @review.name %>
</p>

<p>
  <strong>Review:</strong>
  <%= @review.review %>
</p>

<p>
  <strong>Rating (out of 5):</strong>
  <%= @review.rating %>
</p>

<% @review.comments.each do |comment| %>
  <p>Comment#<%= comment.id %></p>
  <ul>
    <li>Name: <%= comment.name %></li>
    <li>Comment: <%= comment.comment %></li>
  </ul>
<% end %>

<%= link_to 'Back to all reviews', reviews_path %>
<%= link_to 'Comment this review', new_comment_path(@review.id) %>
